{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "paths": {
      "@config": ["/config/*"],
      "@utils": ["/utils/*"],
      "@models": ["/models/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "typings"],
  "lib": ["es2015"]
}
